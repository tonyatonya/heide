<script type="text/javascript">
	$( document ).ready(function(){
		$('.showgal').click(function(){
			$.get("<?php echo e(url('gallery')); ?>", { id: $(this).attr('id')} ,function(data){
				$('#pop_up').html('');
				$('#bx-thumb-slide').html('');
				$.each( data, function( key, v ) {
				  $('#pop_up').append('<li data-slide-index="'+ key +'"><img src="<?php echo e(asset('/images/Gallery/')); ?>/'+ v.img_name +'"/></li>');
				  $('#bx-thumb-slide').append('<li data-slide-index="'+ key +'"><a href="#"><img src="<?php echo e(asset('/images/Gallery/')); ?>/'+ v.img_name +'"/></a></li>');
				  $('#gallery-head').html(v.name_<?php echo e(Session::get('Lang')); ?>);
				});
			}, "json" );
		});

		$('.showvideo').click(function(){
			$.get("<?php echo e(url('video')); ?>", { id: $(this).attr('id')} ,function(data){
				$('#video_name').html(data.name_<?php echo e(Session::get('Lang')); ?>);
				$('#iframe1').attr('src',data.link)
			}, "json" );
		});

		$('.showbio').click(function(){
				$.get("<?php echo e(url('bio')); ?>", { id: $(this).attr('id')} ,function(data){
					$('#border-frame').html('');
					$('.bio-name').html('');
					$('.bio-position').html('');
					$('.bio-des').html('');
					$('.content-overflow').html('');
					$('#border-frame').append('<img src="<?php echo e(asset('/images/')); ?>/'+ data.photo +'"/>');
					$('.bio-name').append(data.name_<?php echo e(Session::get('Lang')); ?>);
					$('.bio-position').append(data.position_<?php echo e(Session::get('Lang')); ?>);
					$('.bio-des').append(data.position_detail_<?php echo e(Session::get('Lang')); ?>);
					$('.content-overflow').append('<p>' + data.detail_<?php echo e(Session::get('Lang')); ?> + '</p>');
				}, "json" );
			});

	});
</script>