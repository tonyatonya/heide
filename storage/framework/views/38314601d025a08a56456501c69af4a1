<body>
	<div class="wrapper">
	<?php echo $__env->make('front.inc_header', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
		<div class="container  media-container">
			<?php echo $__env->make('front.inc_medianav', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
			<div class="row">
				<div class="col-md-12">
		        	<h2 class="popup-h2"><?php echo e($gallery->{'name_'.Session::get('Lang')}); ?> </h2>
	        	</div>
	        	<div class="row">
	                <div class="col-md-8 col-md-offset-2">
		                <div class="pop-slider mango-slider">
			                <ul>
			                	<?php foreach($img as $k=> $v): ?>
				                	<li data-slide-index="<?php echo e($k); ?>"><img src="<?php echo e(asset('/images/Gallery/'.$v->img_name)); ?>"></li>
				                <?php endforeach; ?>
			                </ul>
		                </div>
		                <div class="bx-thumb mango-slider-thumb">
			                <ul>
			                	<?php foreach($img as $k=> $v): ?>
				                <li data-slide-index="<?php echo e($k); ?>"><a href="#"><img src="<?php echo e(asset('/images/Gallery/'.$v->img_name)); ?>"></a></li>
				                <?php endforeach; ?>
